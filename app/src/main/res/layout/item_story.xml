<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/story_card"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_8"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dim_16">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_item_photo"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/story_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dim_4"
            android:drawableTint="?attr/colorOnSurfaceVariant"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textStyle="italic"
            app:drawableStartCompat="@drawable/ic_user"
            app:layout_constraintBottom_toTopOf="@id/story_created_at"
            app:layout_constraintEnd_toStartOf="@id/story_created_at"
            app:layout_constraintStart_toStartOf="@id/story_description"
            app:layout_constraintTop_toBottomOf="parent"
            tools:text="@tools:sample/full_names" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/story_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8"
            android:drawablePadding="@dimen/dim_4"
            android:drawableTint="?attr/colorOnSurfaceVariant"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textStyle="italic"
            app:drawableStartCompat="@drawable/ic_time"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_name"
            app:layout_constraintEnd_toEndOf="@id/story_description"
            app:layout_constraintStart_toEndOf="@id/tv_item_name"
            app:layout_constraintTop_toTopOf="@id/tv_item_name"
            tools:text="@tools:sample/date/mmddyy" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/story_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dim_16"
            android:layout_marginVertical="@dimen/dim_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_item_name"
            app:layout_constraintEnd_toEndOf="@id/iv_item_photo"
            app:layout_constraintStart_toStartOf="@id/iv_item_photo"
            app:layout_constraintTop_toBottomOf="@id/iv_item_photo"
            tools:text="@tools:sample/lorem/random" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
